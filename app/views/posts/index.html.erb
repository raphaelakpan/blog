<div class="container">
  <div class="card-panel">
    <div style="text-align: right">
      <a href='/posts/new' class="btn-floating btn-large waves-effect waves-light blue"><i class="material-icons">add</i></a>
    </div>
    <div class="heading-one center">All Posts</div>
    <div class="nav-wrapper search-wrapper">
      <form>
        <div class="input-field">
          <input id="search" type="search" required>
          <label class="label-icon" for="search"><i class="material-icons">search</i></label>
        </div>
      </form>
    </div>
    <%# <div id="hello">
      <app />
    </div> %>

    <% @posts.each do |post| %>
      <div class="card-panel">
        <span class="heading-three"> <%= link_to post.title, post %> </span> <br>
        <small> <span class="date"> <%= post.created_at.strftime("%A %b %d, %Y") %> </span> </small>
      </div>
    <% end %>

    <%= paginate @posts %>
  </div>
</div>
