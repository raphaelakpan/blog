<div class="container">
  <div class="card-panel">
    <div>
      <a href='<%="/posts/#{@post.id}/edit" %>' class="btn-floating btn-large waves-effect waves-light blue"><i class="material-icons">edit</i></a>
      <a href='<%="/posts/#{@post.id}" %>' data-method="delete" data-confirm="Are you sure?" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">delete</i></a>
    </div>
    <div class="flex-center">
      <span class="date"> <%= @post.created_at.strftime("%A %b %d, %Y") %> </span>
      <h3> <%= @post.title %> </h3>
      <div class="line teal lighten-2"> </div>
    </div>
    <div> <%= markdown @post.content %> </div>

    <div class="flex-center social">
      <div class="line teal lighten-2"> </div>
      <h5> Share This Post </h5>
      <div>
        <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @raph_akpan - &amp;url=<%= polymorphic_url(@post) %>', '_blank', 'width=800,height=500,top=200,left=300');void(0);">
          <img src="http://ccd.rice.edu/uploadedImages/CCD/twitter_circle_ltblue.png" width="40px">
        </a>
        <a onclick="javascript:window.open('http://www.facebook.com/sharer.php?u=<%= polymorphic_url(@post) %>', '_blank', 'width=800,height=500,top=200,left=300');void(0);">
          <img src="https://cdn4.iconfinder.com/data/icons/social-media-icons-the-circle-set/48/facebook_circle-512.png" width="40px">
        </a>
      </div>
      <br />
      <div class="line teal lighten-2"> </div>
    </div>

  </div>
</div>
