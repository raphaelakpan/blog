<div class="flex-center">
  <h3 class="panel-heading heading-two">My Projects </h3>
  <div class="line teal lighten-2"> </div>
</div>

<div class="fixed-action-btn toolbar">
  <a href='/projects/new' class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
</div>

<div class="row">
  <% @projects.each do |project| %>
    <div class="col l6 s12">
      <div class="card-panel">
        <span class="panel-heading heading-three"> <%= project.title %> </span>
        <div class="line teal lighten-2"> </div>

        <div class="card-image">
          <img src="<%= project.image_link %>" width="100%" height="400px">
        </div>
        <div class="card-content">
          <%= markdown project.description %>
        </div>

        <div>
          <%= link_to "Visit Site", project.link, target: "_blank" %>
          <div class="float: right">
            <a href='<%= "#{polymorphic_url(project)}/edit" %>' class="btn-floating btn-small waves-effect waves-light blue"><i class="material-icons">edit</i></a>
            <a href='<%="#{polymorphic_url(project)}" %>' data-method="delete" data-confirm="Are you sure?" class="btn-floating btn-small waves-effect waves-light red"><i class="material-icons">delete</i></a>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%= paginate @projects %>

</div>
